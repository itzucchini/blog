<% title " Add Comment" %>

<% form_for([@post, @comment]) do |f| %>
  <%= f.error_messages %>
  
  <p>
    <%= f.label :name%> <br />
    <%= f.text_field :commenter%>
  </p>
  
  <p>
    <%= f.label :body%> <br />
    <%= f.text_area :body%>
  </p>
  
  <p>
    <%= f.submit "Add comment" %>
  </p>
  
<%end%>
